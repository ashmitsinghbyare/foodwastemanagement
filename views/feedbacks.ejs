<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Feedbacks</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
  <link rel="stylesheet" href="/css/admin.css" />
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      background-color: #f4f4f4;
    }
  
    /* Sidebar styles */
    .sidebar {
      width: 250px;
      background-color: #2c3e50;
      color: white;
      position: fixed;
      top: 0;
      left: 0;
      bottom: 0;
      padding-top: 20px;
      padding-left: 20px;
      padding-right: 20px;
      display: flex;
      flex-direction: column;
      transition: width 0.3s ease-in-out;
      z-index: 100;
    }
  
    .sidebar.collapsed {
      width: 60px;
    }
  
    .sidebar a {
      color: white;
      text-decoration: none;
      margin-bottom: 15px;
      font-size: 18px;
      display: flex;
      align-items: center;
    }
  
    .sidebar.collapsed .link-name {
      display: none;
    }
  
    .sidebar a i {
      font-size: 24px;
      margin-right: 10px;
    }
  
    .sidebar a:hover {
      text-decoration: underline;
    }
  
    .content-wrapper {
      margin-left: 250px;
      padding: 20px;
      flex-grow: 1;
      transition: margin-left 0.3s ease-in-out;
      z-index: 0;
    }
  
    h2 {
      color: #2d6de2f4;
      margin-right: 10px;
    }
  
    /* Table styling */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background-color: white;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      overflow: hidden;  /* Prevent overlapping */
    }
  
    th, td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
      word-wrap: break-word;  /* Prevent text overflow */
    }
  
    th {
      background-color: #34495e;
      color: white;
    }
  
    tr:hover {
      background-color: #ecf0f1;
    }
  
    /* Responsive Layout */
    @media (max-width: 768px) {
      .sidebar {
        position: absolute;
        width: 100%;
        height: 100%;
        left: -100%;
      }
  
      .sidebar.active {
        left: 0;
      }
  
      .content-wrapper {
        margin-left: 0;
        padding: 10px;
      }
  
      table {
        font-size: 14px;
        width: 100%;
      }
    }
  
    /* Adjustments for mobile view - Ensuring the content doesn't overlap */
    @media (max-width: 480px) {
      .content-wrapper {
        padding: 10px;
      }
  
      table {
        font-size: 12px;
        padding: 8px;
      }
  
      td, th {
        padding: 8px;
      }
  
      h2 {
        font-size: 20px;
      }
    }
  </style>
  
</head>
<body>
  <nav class="admin-navbar">
    <div class="logo-name">
      <span class="logo_name">ADMIN</span>
    </div>

    <div class="menu-items">
      <!-- Hamburger Button for mobile -->
      <div class="hamburger-menu" id="hamburger-menu">
        <i class="uil uil-apps"></i>
      </div>

      <ul class="nav-links">
        <li>
          <a href="/admin">
            <i class="uil uil-estate"></i>
            <span class="link-name">Dashboard</span>
          </a>
        </li>
        <li>
          <a href="/admin/analytics">
            <i class="uil uil-chart"></i>
            <span class="link-name">Analytics</span>
          </a>
        </li>
        <li>
          <a href="/admin/donate">
            <i class="uil uil-heart"></i>
            <span class="link-name">Donations</span>
          </a>
        </li>
        <li>
          <a href="/feedbacks">
            <i class="uil uil-comments"></i>
            <span class="link-name">Feedback</span>
          </a>
        </li>
        <li>
          <a href="/admin/profile">
            <i class="uil uil-user"></i>
            <span class="link-name">Profile</span>
          </a>
        </li>
      </ul>

      <ul class="logout-mode">
        <li><a href="/logout"><i class="uil uil-signout"></i> <span class="link-name">Logout</span></a></li>
        <li class="mode" id="darkModeToggle">
          <a href="#"><i class="uil uil-moon" id="theme-icon"></i><span class="link-name">Dark Mode</span></a>
          <div class="mode-toggle"><span class="switch"></span></div>
        </li>
      </ul>
    </div>
  </nav>

  <div class="content-wrapper">
    <h2>Feedbacks</h2>

    <!-- Table to display feedbacks -->
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Message</th>
          <th>Rating</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% feedbacks.forEach(feedback => { %>
          <tr>
            <td><%= feedback.name %></td>
            <td><%= feedback.email %></td>
            <td> <%= feedback.role %></td>
            <td><%= feedback.message %></td>
            <td><%= feedback.rating %></td>
            <td><%= feedback.createdAt.toLocaleString() %></td> <!-- Use createdAt -->
          </tr>
        <% }) %>
      </tbody>
      
    </table>
  </div>

  <script>
    // JavaScript for toggling sidebar on and off for mobile view
    const hamburgerMenu = document.getElementById("hamburger-menu");
    const sidebar = document.querySelector(".sidebar");
    const contentWrapper = document.querySelector(".content-wrapper");

    hamburgerMenu.addEventListener("click", () => {
      sidebar.classList.toggle("active");
      contentWrapper.classList.toggle("active");
    });
  </script>

  <script src="/js/adm.js"></script>
</body>
</html>
