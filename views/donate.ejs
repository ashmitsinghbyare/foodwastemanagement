<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard Panel</title>

  <!-- External Styles -->
  <link rel="stylesheet" href="/css/admin.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
  <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css" />

</head>
<body>

  <!-- âœ… Include Admin Navbar -->
  <%- include('partials/donateNavbar') %>

  <section class="dashboard">
    <div class="top">
      <i class="uil uil-bars sidebar-toggle"></i>
      <p class="logo">Food <b style="color: #06C167;">Donate</b></p>
    </div>

    <div class="activity">
      <div class="location">
        <form id="locationForm">
          <label for="location" class="logo">Select Location:</label>
          <br />
          <select id="location" name="location">
            <option value="indore">Indore</option>
            <option value="bhopal">Bhopal</option>
            <option value="sagar">Sagar</option>
            <option value="chennai">Chennai</option>
            <option value="gwalior">Gwalior</option>
          </select>
          <input type="submit" value="Get Details">
        </form>

        <div id="results" class="table-container">
          <!-- Table results will be inserted here dynamically -->
        </div>
      </div>
    </div>
  </section>

  <script src="/js/adm.js">
    
  </script>
</body>
</html>
