<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Settings - Food Waste System</title>
  <style>
    :root {
      --green: #2e7d32;
      --light: #f9fafb;
      --border: #ccc;
      --radius: 8px;
    }

    * {
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: var(--light);
      margin: 0;
      padding: 40px 20px;
    }

    h2 {
      color: var(--green);
      margin-bottom: 25px;
      text-align: center;
    }

    .container {
      max-width: 800px;
      margin: auto;
    }

    .form-group {
      margin-bottom: 18px;
    }

    label {
      font-weight: 600;
      display: block;
      margin-bottom: 6px;
      color: #333;
    }

    input, select, textarea {
      width: 100%;
      padding: 10px 12px;
      border: 1px solid var(--border);
      border-radius: var(--radius);
      transition: 0.3s ease;
      font-size: 15px;
      background-color: white;
    }

    input:focus, select:focus, textarea:focus {
      border-color: var(--green);
      outline: none;
      background-color: #f0fff0;
    }

    select[multiple], textarea {
      height: auto;
    }

    .section {
      background-color: white;
      padding: 25px;
      border-radius: var(--radius);
      margin-bottom: 30px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    .hidden {
      display: none;
    }

    @media screen and (max-width: 600px) {
      body {
        padding: 20px 10px;
      }

      .section {
        padding: 15px;
      }
    }
  </style>
</head>
<body>

  <!-- âœ… Include Settings Navbar -->
  <%- include('partials/settingsNavbar') %>

  <div class="container">
    <h2>Settings Page</h2>

    <!-- Role Selection -->
    <div class="form-group">
      <label for="role">Select Your Role</label>
      <select id="role" onchange="renderSettings()">
        <option value="">-- Choose Role --</option>
        <option value="admin">Admin</option>
        <option value="donor">Donor</option>
        <option value="receiver">Receiver</option>
      </select>
    </div>

    <!-- Admin Fields -->
    <div class="section hidden" id="admin-settings">
      <h3>Admin Settings</h3>
      <div class="form-group">
        <label for="systemName">System Name</label>
        <input type="text" id="systemName" placeholder="e.g. GreenWaste Platform"/>
      </div>
      <div class="form-group">
        <label for="timezone">Default Timezone</label>
        <select id="timezone">
          <option>UTC</option>
          <option>GMT</option>
          <option>PST</option>
          <option>EST</option>
        </select>
      </div>
      <div class="form-group">
        <label for="maxHoldTime">Max Hold Time (hours)</label>
        <input type="number" id="maxHoldTime" value="24"/>
      </div>
      <div class="form-group">
        <label for="adminNotifications">Enable Notifications</label>
        <select id="adminNotifications">
          <option>Yes</option>
          <option>No</option>
        </select>
      </div>
      <div class="form-group">
        <label for="requireApproval">Approval Required for Donors</label>
        <select id="requireApproval">
          <option>Yes</option>
          <option>No</option>
        </select>
      </div>
    </div>

    <!-- Donor Fields -->
    <div class="section hidden" id="donor-settings">
      <h3>Donor Settings</h3>
      <div class="form-group">
        <label for="businessType">Business Type</label>
        <select id="businessType">
          <option>Restaurant</option>
          <option>Grocery Store</option>
          <option>Bakery</option>
          <option>Other</option>
        </select>
      </div>
      <div class="form-group">
        <label for="pickupTime">Default Pickup Time</label>
        <input type="time" id="pickupTime"/>
      </div>
      <div class="form-group">
        <label>Food Categories</label>
        <select multiple>
          <option>Prepared Meals</option>
          <option>Dairy</option>
          <option>Bakery</option>
          <option>Packaged Goods</option>
        </select>
      </div>
      <div class="form-group">
        <label for="donorAddress">Pickup Address</label>
        <input type="text" id="donorAddress" placeholder="123 Food St, City"/>
      </div>
      <div class="form-group">
        <label for="donorPhone">Contact Number</label>
        <input type="tel" id="donorPhone" placeholder="+1 123-456-7890"/>
      </div>
      <div class="form-group">
        <label for="donorNotify">Preferred Notification Method</label>
        <select id="donorNotify">
          <option>Email</option>
          <option>SMS</option>
          <option>Both</option>
        </select>
      </div>
    </div>

    <!-- Receiver Fields -->
    <div class="section hidden" id="receiver-settings">
      <h3>Receiver Settings</h3>
      <div class="form-group">
        <label for="dailyCapacity">Max Daily Capacity (kg)</label>
        <input type="number" id="dailyCapacity" value="50"/>
      </div>
      <div class="form-group">
        <label for="hours">Operating Hours</label>
        <input type="text" id="hours" placeholder="e.g. 9AM - 5PM"/>
      </div>
      <div class="form-group">
        <label>Accepted Food Types</label>
        <select multiple>
          <option>Vegetables</option>
          <option>Dairy</option>
          <option>Cooked Meals</option>
          <option>Bakery</option>
        </select>
      </div>
      <div class="form-group">
        <label for="pickupInstructions">Pickup Instructions</label>
        <textarea id="pickupInstructions" placeholder="e.g. Use back gate for delivery."></textarea>
      </div>
      <div class="form-group">
        <label for="storageCapacity">Storage Capacity (kg)</label>
        <input type="number" id="storageCapacity" placeholder="e.g. 150"/>
      </div>
      <div class="form-group">
        <label for="emergencyContact">Emergency Contact</label>
        <input type="tel" id="emergencyContact" placeholder="+1 987-654-3210"/>
      </div>
    </div>
  </div>

  <script>
    function renderSettings() {
      const role = document.getElementById("role").value;
      document.getElementById("admin-settings").classList.add("hidden");
      document.getElementById("donor-settings").classList.add("hidden");
      document.getElementById("receiver-settings").classList.add("hidden");

      if (role === "admin") {
        document.getElementById("admin-settings").classList.remove("hidden");
      } else if (role === "donor") {
        document.getElementById("donor-settings").classList.remove("hidden");
      } else if (role === "receiver") {
        document.getElementById("receiver-settings").classList.remove("hidden");
      }
    }
  </script>

</body>
</html>
