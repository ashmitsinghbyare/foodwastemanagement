<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Availability | FoodSave</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <style>
 :root {
  --primary: #06C167;
  --hover: #04a554;
  --bg: #f5f7fa;
  --text: #2c3e50;
  --white: #ffffff;
  --shadow: 0 4px 12px rgba(0, 0, 0, 0.1);
}

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: 'Segoe UI', sans-serif;
  background-color: var(--bg);
  color: var(--text);
  line-height: 1.6;
}

/* NAVBAR */
.nav-bar {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 1000;
  background: var(--text);
  color: var(--white);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 2rem;
  transition: top 0.3s ease;
}

.nav-logo {
  font-weight: bold;
  font-size: 1.5rem;
}

.nav-user {
  position: relative;
  cursor: pointer;
  margin-right: 2rem;
}

.nav-user:hover .dropdown {
  display: block;
}

.dropdown {
  display: none;
  position: absolute;
  top: 100%;
  right: 0;
  background: var(--white);
  color: var(--text);
  border-radius: 6px;
  box-shadow: var(--shadow);
  min-width: 180px;
  margin-top: 0.5rem;
  overflow: hidden;
}

.dropdown a {
  display: flex;
  align-items: center;
  padding: 0.75rem 1rem;
  color: var(--text);
  text-decoration: none;
  font-size: 0.95rem;
  transition: background 0.2s, color 0.2s;
}

.dropdown a i {
  margin-right: 0.6rem;
  min-width: 20px;
}

.dropdown a:hover {
  background: var(--primary);
  color: var(--white);
}

/* MAIN CONTENT */
.main-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rem 1rem 3rem;
  text-align: center;
}

h2 {
  margin-bottom: 2rem;
  font-size: 2rem;
}

/* Availability Section */
.availability-section {
  display: flex;
  justify-content: space-evenly;
  gap: 2rem;
  flex-wrap: wrap;
  width: 100%;
  max-width: 1000px;
  padding: 2rem 1rem;
}

.availability-card {
  background: var(--white);
  color: var(--text);
  padding: 1.5rem;
  border-radius: 12px;
  width: 250px;
  box-shadow: var(--shadow);
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.availability-card i {
  font-size: 2.75rem;
  color: var(--primary);
  margin-bottom: 1rem;
  transition: transform 0.3s ease, color 0.3s ease;
}

.availability-card h3 {
  margin: 0.5rem 0;
  font-size: 1.2rem;
  font-weight: 600;
}

.availability-card p {
  font-size: 1rem;
  margin: 0;
}

.availability-card:hover {
  background: var(--primary);
  color: var(--white);
  transform: translateY(-5px);
}

.availability-card:hover i {
  transform: scale(1.1);
  color: var(--white);
}

.availability-card:hover h3 {
  color: var(--white);
}

/* Responsive Design */
@media (max-width: 768px) {
  .availability-section {
    flex-direction: column;
    align-items: center;
  }

  .availability-card {
    width: 90%;
    margin-bottom: 1.5rem;
  }
}

  </style>
</head>
<body>
  <%- include('partials/availabilitynavbar', { userType: 'Donor' }) %>

  <!-- MAIN CONTENT -->
  <div class="main-content">
    <h2>Your Availability</h2>

<!-- Scheduled Items Count -->
<div class="availability-card">
  <i class="fas fa-clock"></i>
  <h3>Total Scheduled</h3>
  <p><%= totalScheduled %></p>
</div>

<!-- Items Left to Pickup -->
<div class="availability-card">
  <i class="fas fa-box"></i>
  <h3>Left to Pick Up</h3>
  <p><%= totalLeftToPickup %></p>
</div>

<!-- Next Pickup Time -->
<div class="availability-card">
  <i class="fas fa-calendar-check"></i>
  <h3>Next Pickup</h3>
  <p>Next Pickup: <%= availability.nextPickup ? availability.nextPickup.toDateString() : "Not scheduled" %></p>

</div>

    </div>
  </div>

  <script>
    // Your JavaScript code here
    let lastScrollTop = 0;
    const navbar = document.getElementById("navbar");

    window.addEventListener("scroll", () => {
      let scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      if (scrollTop > lastScrollTop) {
        navbar.style.top = "-80px";
      } else {
        navbar.style.top = "0";
      }
      lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
    });
  </script>
</body>
</html>
