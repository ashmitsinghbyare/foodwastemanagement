<%- include('partials/header') %>

<div class="container text-center py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="error-page">
        <i class="fas fa-exclamation-triangle fa-5x text-warning mb-4"></i>
        <h1 class="display-1">500</h1>
        <h2 class="mb-4">Server Error</h2>
        <p class="lead mb-4">Oops! Something went wrong on our end. We're working to fix the issue.</p>
        
        <% if (error && Object.keys(error).length > 0) { %>
          <div class="alert alert-danger mb-4">
            <h5>Error Details:</h5>
            <pre><%= JSON.stringify(error, null, 2) %></pre>
          </div>
        <% } %>
        
        <div class="suggestions mb-5">
          <h4>You might want to:</h4>
          <ul class="list-unstyled">
            <li><i class="fas fa-redo me-2"></i> <a href="javascript:location.reload()">Refresh the page</a></li>
            <li><i class="fas fa-arrow-left me-2"></i> <a href="javascript:history.back()">Go back to the previous page</a></li>
            <li><i class="fas fa-home me-2"></i> <a href="/">Return to the homepage</a></li>
            <li><i class="fas fa-question-circle me-2"></i> <a href="/contact">Contact us for help</a></li>
          </ul>
        </div>
        
        <a href="/" class="btn btn-primary btn-lg">Back to Home</a>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
